{
	"extends": "tslint-config-airbnb",
	"rules": {
		"semicolon": [
			true,
			"always",
			"ignore-bound-class-methods"
		],
		"ter-indent": [
			true,
			4,
			{
				"SwitchCase": true
			}
		],
		"max-line-length": [
			true,
			180
		],
		"align": [
			false
		],
		"no-unused-variable": [
			true
		],
		"no-invalid-this": [
			true,
			"check-function-in-method"
		],
		"no-duplicate-super": [
			true
		],
		"no-construct": [
			true
		],
		"interface-over-type-literal": [
			true
		],
		"no-arg": [
			true
		],
		"arrow-return-shorthand": [
			false
		],
		"no-return-await": [
			true
		],
		"prefer-const": [
			true
		],
		"one-variable-per-declaration": [
			true,
			"ignore-for-loop"
		],
		"no-duplicate-variable": [
			true,
			"check-parameters"
		],
		"no-reference": [
			true
		],
		"no-non-null-assertion": [
			true
		],
		"object-literal-shorthand": [
			true
		],
		"object-literal-key-quotes": [
			true,
			"as-needed"
		],
		"quotemark": [
			true,
			"single"
		],
		"no-invalid-template-strings": [
			true
		],
		"triple-equals": [
			true
		],
		"binary-expression-operand-order": [
			true
		],
		"no-dynamic-delete": [
			true
		],
		"use-isnan": [
			true
		],
		"no-duplicate-switch-case": [
			true
		],
		"no-unsafe-finally": [
			true
		],
		"encoding": [
			true
		],
		"eofline": [
			true
		],
		"indent": [
			true,
			"spaces",
			4
		],
		"one-line": [
			true
		],
		"comment-format": [
			true
		],
		"variable-name": [
			true,
			"check-format"
		],
		"no-eval": [
			true
		],
		"no-string-throw": [
			true
		],
		"no-namespace": [
			true
		],
		"no-sparse-arrays": [
			true
		],
		"ordered-imports": [
			true,
			{
				"import-sources-order": "lowercase-last"
			},
			{
				"grouped-imports": true
			},
			{
				"named-imports-order": "lowercase-last"
			}
		],
		"arrow-parens": [
			true
		],
		"no-debugger": [
			true
		],
		"no-consecutive-blank-lines": [
			true
		],
		"no-bitwise": [
			true
		],
		"member-access": [
			true
		],
		"no-empty": [
			true
		],
		"no-console": [
			true
		],
		"no-unused-expression": [
			true
		],
		"class-name": [
			true
		],
		"newline-before-return": [
			true
		],
		"switch-default": [
			true
		],
		"prefer-template": [
			false
		],
		"typedef": [
			true,
			"array-destructuring",
			"arrow-call-signature",
			"call-signature",
			"arrow-parameter",
			"member-variable-declaration",
			"object-destructuring",
			"parameter",
			"property-declaration",
			"variable-declaration"
		],
		"only-arrow-functions": [
      false
		],
		"no-empty-interface": [
			true
		],
		"member-ordering": [
			true,
			"public-before-private",
			"static-before-instance",
			"variables-before-functions"
		]
	}
}